{{page-title "Login"}}
<PageStructure>
  <h1>Login Page</h1>

  <form {{on "submit" this.authenticate}}>
    <div class="form-group">
      <Input @type="email" class="form-control" @placeholder="Your Email *" id="userEmail" @name="userEmail" @value={{this.userEmail}} />
    </div>

    <div class="form-group">
      <Input @type="password" class="form-control" @placeholder="Your Password *" id="pwd" @name="pwd" @value={{this.pwd}} />
    </div>

    <div class="form-group">
      <input type="submit" class="btnSubmit btn" value="Login">
    </div>
  </form>

  {{#if this.errorMessage}}
  <p class="alert alert-danger"><strong>{{this.errorMessage}}</strong></p>
  {{/if}}
</PageStructure>