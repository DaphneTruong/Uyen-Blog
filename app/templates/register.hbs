{{page-title "Register"}}
<PageStructure>
  <h1>Register Page</h1>
  {{#if this.errorNotice}}
    <div class="alert alert-danger" role="alert">
  {{this.errorNotice}};
</div>
  {{/if}}
  {{#if this.notice}}
  <div class="alert alert-info" role="alert">
    {{this.notice}};
  </div>
  {{/if}}

  <form {{on "submit" (fn this.createUser this.model)}} novalidate>
    <div class="form-group">
      <label for="firstname">First Name</label>
      <Input type="text" class="form-control" placeholder="First Name " name="firstName"
             @value={{this.firstname}}
             {{on "change" (fn this.checkInputText 'firstname')}} />
      <span class="text-danger">{{this.firstnameError}}</span>
    </div>

    <div class="form-group">
      <label for="lastname">Last Name</label>
      <Input type="text" class="form-control" placeholder="Last Name *" name="lastName"
             @value={{this.lastname}}
             {{on "change" (fn this.checkInputText 'lastname')}} />
      <span class="text-danger">{{this.lastnameError}}</span>
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <Input type="email" class="form-control" placeholder="Email *" name="Email"
             @value={{this.userEmail}}
             {{on "change" this.checkInputEmail}} />
      <span class="text-danger">{{this.emailError}}</span>
    </div>

    <div class="form-group">
      <label for="birthday">Birthday</label>
      <Input type="date" class="form-control" name="birthday"
             @value={{this.birthday}}
             {{on "change" this.checkDate}}/>
      <span class="text-danger">{{this.dateError}}</span>
    </div>

    <div class="form-group">
      <label for="pwd">Password</label>
      <Input type="password" class="form-control" placeholder="Your Password *" name="pwd"
             @value={{this.userPwd}}
             {{on "input" this.checkInputPassword}} />
      <span class="text-danger">{{this.pwdError}}</span>
    </div>

    <div class="form-group">
      <label for="rePwd">Re-enter Password</label>
      <Input type="password" class="form-control" placeholder="Re-enter Your Password *" name="rePwd" @value={{this.repwd}} />
    </div>

    <div class="form-group">
      <input type="submit" class="btnSubmit btn btn-info" value="Register">
    </div>
  </form>
</PageStructure>
