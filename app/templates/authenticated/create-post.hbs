{{page-title "Create Post"}}
<div class="container">
  <h1>Write your new post</h1>

  <form {{on "submit" this.createPost}}>
    <div class="form-group">
      <label for="post-title">Post Title <span class="text-danger">*</span></label>
      <Input @type="text"
             class="form-control"
             id="post-title"
             @placeholder="Post Title"
             @value={{this.title}}
             {{on 'input' (fn this.inputValue 'title')}}
             />
      <span class="text-danger">{{this.errorTitle}}</span>
    </div>
    <div class="form-group">
      <label for="post-body">Post Body <span class="text-danger">*</span></label>
      <Textarea class="form-control"
                id="post-body"
                @rows="8"
                @cols="80"
                @value={{this.body}}
                {{on 'input' (fn this.inputValue 'body')}}/>
      <span class="text-danger">{{this.errorBody}}</span>
    </div>

    <div class="form-group">
      <label for="img">Post's image <span class="text-danger">*</span></label>
      <Input @type="text"
             class="form-control"
             id="img"
             @placeholder="Link to your post's image"
             @value={{this.inputImg}}
            {{on 'input' (fn this.inputValue 'image')}} />
      <span class="text-danger">{{this.errorImage}}</span>
      <span class="text-danger">{{this.errorUrl}}</span>
    </div>

    <div class="form-group">
      <label for="tag">Tag Name <span class="text-danger">*</span></label>
      <select class="form-select form-control"
              name="tag"
              id="tag"
              {{on "change" (fn this.inputValue 'tag')}}>
        <option value="">Select tag for your post</option>
        <option value="weather">Weather</option>
        <option value="foods">Foods</option>
        <option value="minimalism">Minimalism</option>
      </select>
      <span class="text-danger">{{this.errorTag}}</span>
    </div>

    <button type="submit" class="btn btn-primary" name="submit">Publish</button>
  </form>
</div>