{{#if this.isShowingModal}}
<ModalDialog @onClose={{this.toggleModal}} @targetAttachment="center" @translucentOverlay=true>
  You will lost your edit if you leave. Do you still want to go?
  <button class="btn" type="button" {{on "click" this.rollBack}}>Yes</button>
  <button class="btn btn-info" type="button" {{on "click" this.toggleModal}}>No</button>
</ModalDialog>
{{/if}}
{{page-title "Edit Profile"}}
<div class="container">
  <h1>Edit Profile</h1>
  <div class="form" id="input-form">
    <div class="form-group">
      <label for="firstname">First Name</label>
      <Input @type="text" class="form-control" id="firstname" @value={{this.model.firstname }} {{on "input" (fn this.updateUserProperty 'firstname') }}/>
      <span class="text-danger">{{this.firstnameError}}</span>
    </div>

    <div class="form-group">
      <label for="lastname">Last Name</label>
      <Input @type="text" class="form-control" id="lastname" @value={{this.model.lastname}} {{on "input" (fn this.updateUserProperty 'lastname') }}/>
      <span class="text-danger">{{this.lastnameError}}</span>
    </div>

    <div class="form-group">
      <label for="email">Email </label>
      <Input @type="email" class="form-control" id="email" @value={{this.model.email}} {{on "input" (fn this.updateUserProperty 'email') }}/>
      <span class="text-danger">{{this.emailError}}</span>
    </div>

    <div class="form-group">
      <label for="birthday">Birthday</label>
      <Input @type="date" class="form-control" id="birthday" @value={{this.model.date}} {{on "input" (fn this.updateUserProperty 'birthday') }}/>
      <span class="text-danger">{{this.birthdayError}}</span>
    </div>

    <div class="editPassword mb-2">
      {{#if this.editPassword}}
      <div class="form-group">
        <label for="password">Password</label>
        <Input @type="password" class="form-control" id="password" @value={{this.model.password}} {{on "input" (fn this.updateUserProperty 'password') }} />
        <span class="text-danger">{{this.passwordError}}</span>
      </div>

      <div class="form-group">
        <label for="rePwd">Re-enter Password</label>
        <Input @type="password" class="form-control" id="rePwd" @value={{this.rePwd}} {{on "change" (fn this.updateUserProperty 'rePwd') }} />
        <span class="text-danger">{{this.rePwdError}}</span>
      </div>
      <button class="editPwdBtn btn" name="no-change" {{on 'click' this.editPasswordFnc}}>Never Mind</button>
      {{else}}
      <button class="editPwdBtn btn" name="edit-button" {{on 'click' this.editPasswordFnc}}>Edit Password</button>
      {{/if}}
      <button type="button" class="btn btn-ember text-white" name="submit" {{on "click" this.editProfile}}>Submit</button>
    </div>
  </div>
</div>